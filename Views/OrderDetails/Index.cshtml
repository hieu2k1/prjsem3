@model IEnumerable<DemoProjectSem3.Models.OrderDetails>

@{ ViewBag.Title = "Index";
                Layout = "~/Views/Shared/_Layout.cshtml"; }

<h2>Danh sách đơn hàng</h2>


<table class="table">
    <tr>
        <th>
            User
        </th>
        <th>
            Date
        </th>
        <th>
            Status
        </th>
        <th>
            Description
        </th>
        <th>
            Payment
        </th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.user_id)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.date_order)
    </td>
    <td>
        <div style="color:red">Đang chờ xác nhận</div>
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.description)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.payment_id)
    </td>
    <td>
        <button class="btn-primary">
            @Html.ActionLink("Chi tiết", "Details", new { id = item.id }, new { @style = "color:white;" })
        </button>

    </td>
</tr>}

</table>
